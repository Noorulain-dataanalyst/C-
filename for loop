//For Loop Basics
//Write a program to print numbers from 1 to 10 using a for loop.
#include<iostream>
using namespace std;
int main()
{
    int num;
    for(num=1;num<=10;num+=1)
      cout<<num<<endl;
}
//while loop
#include <iostream>
using namespace std;
int main(){
    int num;
    num=1;
    while(num<=10)
      {cout<<num<<endl;
      num+=1;}
    return 0;
}
//Write a program to calculate the sum of the first 10 natural numbers using a while loop.
#include <iostream>
using namespace std;
int main()
{
    int num;
    int sum_number=0;
    
    num=1;
    while(num<=10)
    {
        sum_number=sum_number+num;
        num+=1;
    }
    cout<<sum_number<<endl;
    return 0;
}
//Write a program to print all even numbers between 1 and 50 using a for loop.
#include<iostream>
using namespace std;
int main()
{
    int number;
    for (number=1;number<=50;number+=1)
     if (number%2==0)
       cout<<number<<endl;
    return 0;
}
